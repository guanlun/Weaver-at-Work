        	<div id='inner_container'>
              <div id="gallery_list_title">gallery</div>
              <div id="gallery_list_container">
                <% if @galleries.empty? %>
                  No Gallery Available
                <% else %>
                  <% @galleries.each do |g| %>
                    <div class="gallery_item">
                      <div class="gallery_item_title"><%= g.title %></div>
                      <div class="gallery_item_datetime"><%= g.created_at.strftime("%a, %b %d, %Y") %></div>
                      <div class="gallery_item_content"><%= g.description %></div>
                      <div class="gallery_item_thumbnail"><%= image_tag g.pictures[0].link %></div>
                    </div>
                  <% end %>
                <% end %>
              </div>
