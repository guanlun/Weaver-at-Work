<%= stylesheet_link_tag "texts" %>
<%= render :partial => "elements/header" %>
        <div id='container'>
<%= render :partial => "elements/nav_bar" %>
            <div id='inner_container'>
              <div id="text_list_title">texts</div>
              <div id="text_list_container">

                <% @texts.each do |t| %>
                  <div class="text_item">
                    <div class="text_item_title"><%= link_to t.title, t.id.to_s %></div>
                    <div class="text_item_datetime"><%= t.created_at.strftime("%a, %b %d, %Y") %></div>
                    <div class="text_item_quote">â€œ</div>
                    <div class="text_item_content">
                      <% content = raw t.content %>
                      <% if content.length > 250 %>
                        <% curr = 250 %>
                        <% while content[curr] != " " do %>
                          <% curr += 1 %>
                        <% end %>
                        <%= content[0 .. curr] + " ..."%>
                      <% else %>
                        <%= content %>
                      <% end %>
                    </div>
                  </div>
                <% end %>
                
              </div>
	        	</div>
	        </div>

        </div>
<%= render :partial => "elements/footer" %>
